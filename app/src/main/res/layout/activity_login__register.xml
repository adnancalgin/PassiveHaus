<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ekoloji"
    tools:context="com.example.pc.passivhaus.Login_Register">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="495dp"
        android:padding="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <TextView
            android:layout_width="wrap_content"
            android:text="Kullanıcı Adı"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Ev Numarası"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etevnumarası"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:text="Şifre"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etpassword"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:paddingBottom="15dp"
            android:text="Giriş Yap"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:textStyle="bold"
            android:text="ÜYELİĞİNİZ YOK İSE LÜTFEN KAYIT OLUNUZ"
            android:textColor="@android:color/holo_blue_bright"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/TvRegisterlink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Kayıt Olmak için tıklayınız"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="25dp"
            android:textStyle="bold"
            />



    </LinearLayout>











</android.support.constraint.ConstraintLayout>




