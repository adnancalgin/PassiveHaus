<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/kayit"
    tools:context="com.example.pc.passivhaus.Register">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="495dp"
        android:padding="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:layout_width="match_parent"
            android:text="İsminiz"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:text="Soyadınız"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            />

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Kullanıcı Adı"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="match_parent"
            android:text="E-Mail"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etEMail"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Şifre"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etpassword"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Şifre Kontrol"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/etcheckpassword"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/FRegister"
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="2dp"
            android:text="KAYIT OLMA İŞLEMİNİ TAMAMLAYIN"
            android:textSize="15dp"
            android:textStyle="bold" />




    </LinearLayout>




</android.support.constraint.ConstraintLayout>
